


<h1>Courses</h1>

<form method="get">
    <label>Filter by Status:</label>
    <select name="status" onchange="this.form.submit()">
        <option value="">All</option>
        @foreach (var s in ViewBag.StatusList)
        {
            <option value="@s" selected="@(ViewBag.SelectedStatus?.ToString() == s.ToString() ? "selected" : "")">@s</option>
        }
    </select>
</form>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Result</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Course Title</th>
            <th>Total Marks</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.StudentName</td>
            <td>@item.CourseTitle</td>
            <td>@item.TotalMarks</td>
            <td style="color:@(item.Status == CourseStatus.Excellent ? "green" : item.Status == CourseStatus.Good ? "blue" : "red")">
                @item.Status
            </td>
        </tr>
    }
    </tbody>
</table>
        